#!/usr/bin/env sh
cd "$(dirname -- "$0")/../.." || exit 1

cd server || exit 1

# Run ruff linting
echo "Running ruff lint..."
ruff check . || exit 1

# Check formatting
echo "Checking code formatting..."
ruff format --check . || exit 1

# Check Python syntax
echo "Checking Python syntax..."
python -m py_compile app.py db.py db_schema.py || exit 1

echo "All checks passed!"

